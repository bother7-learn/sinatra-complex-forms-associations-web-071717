<h1>Create a new Pet</h1>

<form method="POST" action="/pets">

<input type="text" name="pet_name" id="pet_name">
<input type="text" name="pet[name]" id="pet[name]">
<%@owners.each do |owner|%>
  <input type="checkbox" name="pet[owner]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>

<input type="text" name="owner_name">


<input type="submit" value="Create Pet">
</form>
